<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Prueba"
             x:Class="Prueba.MainPage">

    <ContentPage.Content>
        <Grid>
            <Image Source="walazul.jpeg" Aspect="AspectFill" />

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="Pokeball.png" WidthRequest="200" HeightRequest="200" Margin="0,50,0,30"/>

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry  x:Name="txtuser"  Placeholder="Usuario" PlaceholderColor="White" TextColor="White"/>
                    <Entry x:Name="txtcontra" Placeholder="Contraseña" PlaceholderColor="White" IsPassword="True" TextColor="White"/>
                    <Button x:Name="btnInicioSesion" Text="Iniciar sesión" BackgroundColor="Red" BorderRadius="20" TextColor="White"/>
                    <Button x:Name="btnSalir" Text="Salir de la Aplicación" BackgroundColor="Red" BorderRadius="20" TextColor="White"/>
                    
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>

</ContentPage>
